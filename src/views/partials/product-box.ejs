<div class="product-wrapper">
  <a href="/products/<%= product.id %>">
    <article class="prod-destacado">
      <img src="/img/products/<%= product.image %>" class="prod-img" alt="<%= product.name %>" />
      <div class="article-box">
        <h3 class="text-description"><%= product.name %></h3>
        <% if (product.discount > 0) { %>
        <div class="discount-box">
          <span class="text-prices-discount"><%= toThousand(product.price) %></span>
          <span class="text-discount"><%= product.discount %></span>
        </div>
        <p class="text-prices">
          <%= toThousand(product.price - product.price * product.discount / 100) %>
        </p>
        <% } else { %>
        <p class="text-prices"><%= toThousand(product.price) %></p>
        <% } %>
      </div>
    </article>
  </a>
</div>
